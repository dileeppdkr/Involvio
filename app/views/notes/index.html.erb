
<div class="container">
    <div class="row col-md-6 col-md-offset-2 custyle">
    <table class="table table-striped custab">
    <thead>
      <%= link_to '+ Add new Note', new_note_path, :class=>"btn btn-primary btn-xs pull-right" %>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>tags</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
        <% @notes.each do |note| %>
          <tr>
            <td><%= note.title %></td>
            <td><%= note.body %></td>
            <td><%= note.tags %></td>
            <td class="text-center"><a class='btn btn-info btn-xs' href="<%=edit_note_path(note)%>"><span class="glyphicon glyphicon-edit"></span> Edit</a> <%= link_to 'X Del', note, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-xs" %></td>
            
          </tr>
        <% end %>

           
    </table>
    <% if @notes.count <= 0%>
        <tr>
          Oops.. no notes found!! <%= link_to '+ Add new Note', new_note_path, :class=>"btn btn-primary btn-xs pull-right" %>
        </tr>
        <% end %>
    </div>
</div>

